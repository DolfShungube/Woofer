<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/fixed_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40dp">

            <TextView
                android:id="@+id/updates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Updates"
                android:textSize="22dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/add_stprofile"/>

            <TextView
                android:id="@+id/mystatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My status"
                android:textSize="21dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_toRightOf="@id/image1"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                tools:ignore="DuplicateIds" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/mystatusText"
                android:layout_marginLeft="70dp"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/camera">
                </ImageView>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/type_status">
                </ImageView>

            </LinearLayout>


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent status updates"
                    android:textSize="14dp"
                    android:textColor="#696969"
                    android:textStyle="bold"/>
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fixed_header"
        android:layout_above="@+id/bottom_nav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">


                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/friend_stprofile"/>

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="username1"
                    android:textSize="21sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/image2"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">


                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/friend_stprofile"/>

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="username2"
                    android:textSize="21sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/image3"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">


                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/friend_stprofile"/>

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="username3"
                    android:textSize="21sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/image4"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <include
        android:id="@+id/bottom_nav"
        layout="@layout/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>