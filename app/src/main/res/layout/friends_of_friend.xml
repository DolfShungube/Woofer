<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/fixed_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40dp">

            <ImageView
                android:id="@+id/imageBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/white_back"
                android:clickable="true"
                android:focusable="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/followersText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friends"
                android:textSize="22dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fixed_header"
        android:layout_above="@+id/bottom_nav"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:paddingLeft="40dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">


                <ImageView
                    android:id="@+id/friend1"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/friend_stprofile"/>

                <TextView
                    android:id="@+id/username1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="username1"
                    android:textSize="21sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/friend1"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/username1"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"
                    android:text="follow"
                    android:backgroundTint="#e293c4"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:paddingLeft="40dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">


                <ImageView
                    android:id="@+id/friend2"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/friend_stprofile"/>

                <TextView
                    android:id="@+id/username2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="username2"
                    android:textSize="21sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/friend2"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/username2"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"
                    android:text="follow"
                    android:backgroundTint="#e293c4"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:paddingLeft="40dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">


                <ImageView
                    android:id="@+id/friend3"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/friend_stprofile"/>

                <TextView
                    android:id="@+id/username3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="username3"
                    android:textSize="21sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/friend3"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/username3"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"
                    android:text="follow"
                    android:backgroundTint="#e293c4"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:paddingLeft="40dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">


                <ImageView
                    android:id="@+id/friend4"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/friend_stprofile"/>

                <TextView
                    android:id="@+id/username4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="username4"
                    android:textSize="21sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/friend4"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/username4"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"
                    android:text="follow"
                    android:backgroundTint="#e293c4"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:paddingLeft="40dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">


                <ImageView
                    android:id="@+id/friend5"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/friend_stprofile"/>

                <TextView
                    android:id="@+id/username5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="username5"
                    android:textSize="21sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/friend5"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/username5"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"
                    android:text="follow"
                    android:backgroundTint="#e293c4"/>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <include
        android:id="@+id/bottom_nav"
        layout="@layout/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>